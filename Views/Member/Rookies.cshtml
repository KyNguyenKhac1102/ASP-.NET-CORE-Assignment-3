 @model List<Member>
 @{
    ViewData["Title"] = "Rookies";
    var index = 0;
}
 
<h2>Rookies</h2>
<a asp-action="Create"> <button type="button" class="btn btn-primary m-2">Create</button></a>

        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Gender</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
                
                </tr>
            </thead>
            <tbody>
                
                @foreach(var member in Model){
                    <tr>
                    <th scope="row">@(index++)</th>
                    <td>@member.Id.ToString().Substring(0,6)</td>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Gender</td>
                    <td>@member.DateOfBirth</td>
                    <td>@member.Email</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@member.Id"><button style="width:60px; ;" type="button" class="btn btn-secondary">Edit</button></a>
                        <a asp-action="Delete" asp-route-id="@member.Id"><button style="width:75px" type="button" class="btn btn-danger">Delete</button></a>
                        
                    </td>
                    </tr>
                }
            </tbody>
        </table>